<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <category>
        <pattern>My name is *</pattern>
        <template>
            Hi, <set name = "name"><star/></set><br/>
            Good to see you.
            <button>
                <text>Are you male</text>
                <postback>What is your name</postback>
            </button>
            <button>
                <text>Female</text>
                <postback><set name = "gender"></set></postback>
            </button>
            
        </template>
    </category>
    
	<category>
