<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<category>
	    <pattern>hey ^</pattern>
	    <template>
	        <random>
                <li> Hey there <think><set name = "topic">repetition</set></think></li>
	            <li> Hey beautiful <think><set name = "topic">greeting</set></think></li>
	            <li> Sup </li>
	            <li> Assalam u Alikum </li>
	            <li> Hello </li>
	            <li> Hi </li>
	            <li> Hi! Nice to meet you </li>
	            <li> Can I help you </li>
	            <li> How can I help you </li>
